<!DOCTYPE html>
<html>
<head>
  <title>Edit Track</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  <script>
    function confirmDelete() {
      return confirm('Are you sure you want to delete this track?');
    }
  </script>
</head>
<body>
  <h1>Edit Track</h1>
  <form action="/add/editTrack/<%= track._id %>" method="POST">
    <label for="song">Song:</label>
    <input type="text" name="song" value="<%= track.song %>" required><br>
    <label for="artist">Artist:</label>
    <input type="text" name="artist" value="<%= track.artist %>" required><br>
    <label for="album">Album:</label>
    <input type="text" name="album" value="<%= track.album %>"><br>
    <label for="dateAdded">Date Added:</label>
    <input type="date" name="dateAdded" value="<%= track.dateAdded.toISOString().split('T')[0] %>" required><br>
    <label for="favorite">Favorite:</label>
        <select name="favorite">
            <option value="true" <%= track.favorite ? 'selected' : '' %>>Yes</option>
            <option value="false" <%= !track.favorite ? 'selected' : '' %>>No</option>
    </select><br>
    <label for="source">Streaming Source:</label>
    <select name="source">
      <% streamingSources.forEach(source => { %>
        <option value="<%= source.name %>"><%= source.name %></option>
      <% }); %>
    </select>
    <a href="/add/addStreamingSource">Add New Streaming Source</a><br>
    <label for="discovery">Discovery Source:</label>
    <input type="text" name="discovery" value="<%= track.discovery.join(', ') %>"><br>
    <label for="link">Link:</label>
    <input type="url" name="link" value="<%= track.link %>"><br>
    <input type="submit" value="Save Changes">
  </form>
  
  <button type="button" onclick="history.back()">Cancel</button>
  <form action="/tracks/delete/<%= track._id %>" method="POST" onsubmit="return confirmDelete();">
    <input type="submit" value="Delete Track">
  </form>
</body>
</html>