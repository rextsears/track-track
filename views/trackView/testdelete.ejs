<!DOCTYPE html>
<html>
<head>
  <title>Edit Track</title>
  <!-- ... (your existing CSS and JS links) ... -->
</head>
<body class="bg-light">
  <div class="container">
    <div class="row mt-5">
      <div class="col-md-6 offset-md-3 bg-white p-5 rounded shadow">
        <h1 class="mb-4 text-center">Edit Track</h1>
        <form action="/add/editTrack/<%= track._id %>" method="POST">
          <!-- ... (your existing form inputs) ... -->

          <!-- Delete Track Button with Confirmation Modal -->
          <div class="mb-3 form-group">
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirmationModal">
              <i class="bi bi-trash"></i> Delete Track
            </button>
            <button type="button" class="btn btn-secondary" onclick="history.back()">Cancel</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
  <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteConfirmationModalLabel">Delete Confirmation</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete this track?</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <form action="/tracks/delete/<%= track._id %>" method="POST">
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- ... (your existing JavaScript) ... -->
</body>
</html>
