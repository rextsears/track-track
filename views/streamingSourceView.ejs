<!DOCTYPE html>
<html>
<head>
  <title>Streaming Sources - Track-Track</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@300&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@600&display=swap" rel="stylesheet">
  <link href="/stylesheets/all.css" rel="stylesheet">
  <style>
    th:nth-child(2),
    td:nth-child(2),
    th:nth-child(3),
    td:nth-child(3) {
      width: 10%;
    }
    .table-container {
      width: 50%;
      margin: 0 auto;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center">Streaming Sources</h1>
    <div class="table-container">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% streamingSources.forEach(source => { %>
            <tr>
              <td><%= source.name %></td>
              <td><a href="/streamingSource/edit/<%= source._id %>" class="btn btn-primary">Edit</a></td>
              <td>
                <a href="/streamingSource/delete/<%= source._id %>" class="btn btn-danger" onclick="return confirmDelete();">Delete</a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <div class="text-center">
      <a href="/add/addStreamingSource" class="btn btn-primary">Add New Streaming Source</a>
      <a href="/" class="btn btn-light">
        <i class="bi bi-house-door-fill"></i> Back to Home
      </a>
      <div class="streamloggeduser">
        <% if (locals.user) { %>Signed in as <%= locals.user.username %><% } %>
    </div>
    </div>
  </div>
</body>
</html>
